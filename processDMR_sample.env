# Database configuration
DATABASE_URL=sqlite:///dmr_analysis.db

# Flask configuration
FLASK_APP=backend/app.py
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=your-secret-key-here

# File paths
DATA_DIR=./data
GRAPH_DATA_DIR=./data
DSS1_FILE=./data/DSS1.xlsx
DSS_PAIRWISE_FILE=./data/DSS_PAIRWISE.xlsx

# Analysis settings
START_GENE_ID=100000
MIN_COMPONENT_SIZE=3

# LLM settings
## Specify the OpenAI API key
OPENAI_API_KEY=

## Anthropic
ANTHROPIC_API_KEY=

## Deepseek
DEEPSEEK_API_KEY=

## Musk
GROQ_API_KEY=
XAI_API_KEY=

OPENAI_MODEL=gpt-3.5-turbo
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=tinyllama:1.1b-chat-v1-q5_K_M
# NCBI E-utilities Configuration
# Required for accessing NCBI APIs

# Your registered email with NCBI
NCBI_EMAIL="peter@example.com"

# Your NCBI API key - get from https://www.ncbi.nlm.nih.gov/account/settings/
NCBI_API_KEY="your_api_key"

# Optional: Set to "human" or "mouse" to specify default organism
DEFAULT_ORGANISM="mouse"

HTTP_PROXY=
HTTPS_PROXY=
http_noproxy=
